[Unit]
Description=Escrow Gigs Celery Worker
After=network.target redis.service postgresql.service

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/escrow-gigs-bot/escrow-gigs-bot
ExecStart=/home/ubuntu/escrow-gigs-bot/escrow-gigs-bot/venv/bin/celery -A app.tasks worker --loglevel=info
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
