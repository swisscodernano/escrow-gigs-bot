[Unit]
Description=Escrow Gigs Web App (Uvicorn)
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/escrow-gigs-bot/escrow-gigs-bot
ExecStart=/home/ubuntu/escrow-gigs-bot/escrow-gigs-bot/venv/bin/uvicorn app.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
